#pragma once

/* -------------------------------------------------------------- */

/**
 * @def _yIO_COMPILES_PEDANTIC
 * Set to 1 if compiling with -pedantic flag.
 */
#ifndef _yIO_COMPILES_PEDANTIC
#define _yIO_COMPILES_PEDANTIC  @YIO_COMPILES_PEDANTIC@
#endif

/**
 * @def _yIO_HAVE_INT128
 * Set by cmake if the compiler supports __int128 type
 * Like gcc: https://gcc.gnu.org/onlinedocs/gcc/_005f_005fint128.html
 */
#ifndef _yIO_HAVE_INT128
#define _yIO_HAVE_INT128  @HAVE_INT128@
#endif

/**
 * @def _yIO_HAVE_INT64_T
 * Set by cmake if the compiler supports uint64_t and int64_t types
 */
#ifndef _yIO_HAVE_INT64_T
#define _yIO_HAVE_INT64_T  @HAVE_INT64_T@
#endif

/**
 * @def _yIO_HAVE_UNISTD_H
 * Set by cmake if the compiler is posix.
 */
#ifndef _yIO_HAVE_UNISTD_H
#define _yIO_HAVE_UNISTD_H  @HAVE_UNISTD_H@
#endif

/* -------------------------------------------------------------- */

/**
 * Enable compilation of format specifiers that use:
 * - _FloatN
 * - _FloatNx
 */
#ifndef _yIO_USE__FLOATN
#define _yIO_USE__FLOATN  !_yIO_COMPILES_PEDANTIC
#endif

/**
 * Enable compilation of format specifiers that use:
 * - _DecimalN
 * - _DecimalNx
 */
#ifndef _yIO_USE__DECIMALN
#define _yIO_USE__DECIMALN  !_yIO_COMPILES_PEDANTIC
#endif

/**
 * Enable compilation of int128_t type
 */
#ifndef _yIO_USE___INT128
#define _yIO_USE___INT128  _yIO_HAVE_INT128_T
#endif

/**
 * Enable compilation of int64_t and uint64_t types
 */
#ifndef _yIO_USE_INT64_T
#define _yIO_USE_INT64_T  _yIO_HAVE_INT64_T
#endif


