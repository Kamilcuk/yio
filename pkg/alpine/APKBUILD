# Contributor: Kamil Cukrowski <kamilcukrowski@gmail.com>
# Maintainer: Kamil Cukrowski <kamilcukrowski@gmail.com>
pkgname=yio
pkgver=$(git describe --tags | sed 's/v//; s/-.*//')_git$(date +%Y%m%d)
pkgrel=0
pkgdesc="Yio Input Output C Library that aims in type-safe printf replacement"
url="https://github.com/Kamilcuk/kamil-scripts"
arch="x86_64"
license="GPL3.0"
#depends=""
makedepends="cmake m4 libunistring-dev"
#install=""
#subpackages=""
#source=""
builddir="$srcdir/"
#sha512sums=""

prepare() {
	default_prepare
	ln -nvsf "$YIO_SRCDIR" yio
}

build() {
	cmake \
		-B "build" \
		-S "yio" \
		-D CMAKE_BUILD_TYPE="Release"
	cmake --build build
}

check() {
	:;
}

package() {
	mkdir -p "$pkgdir"
	cmake --install "build" --prefix "$pkgdir/usr"
}

